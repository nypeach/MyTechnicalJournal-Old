/* ↓ targets the intermediary wrapper */
.with-sidebar > * {
  display: flex;
  /* flex-wrap: wrap; */
  margin: -0.5rem;
  align-items: stretch;
  height: calc(100vh - 100px);
}

.with-sidebar > * > * {
  /* ↓ applies to both elements */
  margin: 0.5rem;
  height: calc(100vh - 100px);
}

.sidebar {
  flex-basis: 40rem;
  flex-grow: 1;
  color: #f7f7f7;
  background-color: #D8315B;
}
.sidebarHeader {
  flex-basis: 40rem;
  flex-grow: 1;
    background-color: #f7f7f7;
      color: #D8315B;
}
.not-sidebar {
  /* ↓ grow from nothing */
  flex-basis: 0;
  flex-grow: 999;
  min-width: calc(70% - 1rem);
}


.leftContainer {
  color: #f7f7f7;
  width: 425px;
