}

.form-entry {
  margin-top: 20px;
}
ul.no-bullets {
  list-style-type: none; /* Remove bullets */
  padding: 0; /* Remove padding */
  margin: 0; /* Remove margins */
}
.main {
  display: flex;
  flex-flow: row;
}
.heading{
  display: flex;
  flex-flow: row;
}
.heading-left {
  display: flex;
  width: 50%;
  margin-right: 20px;
}
.heading-right1 {
  display: flex;
  width: 25%;
  flex-flow: column nowrap;
  margin-top: 16px;
  margin-left: 20px;
}

.fa-times-circle {
  cursor: pointer;
  color: #D8315B;
  text-align: right;
  float:right
}
.form-modal-wrapper {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.form-modal-backdrop {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: rgba(0, 0, 0, 0.4);
}
.form-modal-box {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 75;
  width: 65%;
  background-color: #f7f7f7;
  z-index: 101;
  box-shadow: 0 8px 6px -6px  #D8315B;
  border: #D8315B solid 1px;
  padding: 20px;
  box-sizing: border-box;
  overflow: auto;
  margin-top: -30px;
}

.attendee-form {
  display: flex;
  width: 50%;
  flex-flow: column nowrap;
  margin-right: 20px;
}
.attendee-form-buttons {
  display: flex;
  width: 50%;
  margin-right: 20px;
}

.attendees {
  display: flex;
  width: 40%;
  margin-left: 20px;
  flex-flow: column nowrap;
}

input {
  width:100%;
  font-family: 'Quicksand', sans-serif;
  box-sizing:border-box;
  background:none;
  outline:none;
  resize:none;
  border:0;
  font-size: 16px;
  font-weight: 400;
  transition:all .3s;
  border-bottom:2px solid #D8315B;
  margin-bottom: 24px;
  padding-left: 12px;
  margin-top: 6px;
}

input:focus {
  border-bottom:2px solid #D8315B;
}

button {
  padding:8px 12px;
  margin: 50px 0px 0px 0px;
  border:2px solid  #D8315B;
  background: #f7f7f7;
  cursor:pointer;
  transition:all .3s;
  font-family: 'Quicksand', sans-serif;
  font-weight: 400;
}

button:hover {
  background: #D8315B;
  border: 2px solid  #D8315B;
  color: #f7f7f7;
  font-family: 'Quicksand', sans-serif;
  font-weight: 400;
}

li:hover {
    color:  #D8315B;
    cursor:pointer;
}

ul {
  list-style-type: none; /* Remove bullets */
  padding: 12px; /* Remove padding */
}

ul li {
  /* border: 1px solid #ddd; Add a thin border to each list item */
  margin-top: -1px; /* Prevent double borders */
  background-color: #f6f6f6; /* Add a grey background color */
  padding-bottom: 6px; /* Add some padding */
}
